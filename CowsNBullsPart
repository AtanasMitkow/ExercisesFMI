#include "stdafx.h"
#include <iostream>
#include <time.h>
using namespace std;


int main()
{	
	int aComp, bComp, cComp, dComp , aUser , bUser , cUser , dUser , userInput;
	int Cows = 0;
	int Bulls = 0;
	int difDigits = 0;
	do
	{
		srand(time(NULL));
		int compNum = rand() % 9000 + 1000;
		dComp = compNum % 10;
		cComp = (compNum / 10) % 10;
		bComp = (compNum / 100) % 10;
		aComp = compNum / 1000;
		if (aComp == bComp || aComp == cComp || aComp == dComp || bComp == cComp || bComp == dComp || cComp == dComp)
		{
			difDigits = 0;
		}
		else 
		{
			difDigits = 1;
			cout << compNum << endl;
		}
	} while (difDigits != 1);
	
	cout << "Enter your four digit number: " << endl; 
	cin >> userInput;
	while (userInput != 0)
	{
		dUser = userInput % 10;
		if (dUser == dComp) {
			Bulls += 1;
		}
		else if (dUser == aComp || dUser == bComp || dUser == cComp) 
		{
			Cows += 1;
		}
		cUser = (userInput / 10) % 10;
		if (cUser == cComp) {
			Bulls += 1;
		}
		else if (cUser == aComp || cUser == bComp || cUser == dComp)
		{
			Cows += 1;
		}
		bUser = (userInput / 100) % 10;
		if (bUser == bComp) {
			Bulls += 1;
		}
		else if (bUser == aComp || bUser == cComp || bUser == dComp)
		{
			Cows += 1;
		}
		aUser = userInput / 1000;
		if (aUser == aComp) {
			Bulls += 1;
		}
		else if (aUser == bComp || aUser == bComp || aUser == dComp)
		{
			Cows += 1;
		}
	}

	
	
	return 0;
}
